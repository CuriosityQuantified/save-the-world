modules = ["python-3.12", "web", "nodejs-20"]
run = "python -m uvicorn api.app:app --host 0.0.0.0 --port 8000"

[nix]
channel = "stable-24_05"
packages = ["bash", "libxcrypt"]

[deployment]
run = ["sh", "-c", "python -m uvicorn api.app:app --host 0.0.0.0 --port 8000"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "pip install -r requirements.txt"]

[[ports]]
localPort = 8000
externalPort = 80

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 22411629
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn api.app:app --host 0.0.0.0 --port 8000"
